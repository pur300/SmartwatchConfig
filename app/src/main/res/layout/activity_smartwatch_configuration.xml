<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gmail.purkov.elis.smartwatchconfig.SmartwatchConfiguration"
    android:id="@+id/mainLayout">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btDevicesDropdown"
        android:spinnerMode="dropdown"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/smsNotifSwitchText"
        android:id="@+id/smsNotifSwitch"
        android:layout_below="@+id/btDevicesDropdown"
        android:layout_marginTop="50dp"
        android:checked="false" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/callsNotifSwitchText"
        android:id="@+id/callsNotifSwitch"
        android:layout_below="@+id/smsNotifSwitch"
        android:layout_marginTop="50dp"
        android:checked="false" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/emailNotifSwitchText"
        android:id="@+id/emailNotifSwitch"
        android:layout_below="@+id/callsNotifSwitch"
        android:layout_marginTop="50dp"
        android:checked="false" />

</RelativeLayout>
